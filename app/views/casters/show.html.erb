<form class="form-horizontal">
  <fieldset>
    <legend><%=@caster.name%></legend>
    <div class="form-group">
      <label for="textArea" class="col-lg-2 control-label">Bio</label>
      <div class="col-lg-10">
        <%= best_in_place_if @can_edit_self, @caster, :bio, :type => :textarea%>
      </div>
    </div>
    <%if @can_edit_self or @caster.email_flag == true%>
      <div class="form-group">
        <label for="inputEmail" class="col-lg-2 control-label">Email</label>
        <div class="col-lg-10">
          <%= best_in_place_if @can_edit_self, @caster, :email, :type => :input %>
        </div>
      </div>
    <%end%>
    <%if @can_edit_self%>
      <div class="form-group">
      <label class="col-sm-2 control-label">Display email?</label>
        <div class="col-sm-10">
          <%= best_in_place_if @can_edit_self, @caster, :email_flag, :type => :checkbox %>
        </div>
      </div>
    <%end%>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Caster?</label>
      <div class="col-lg-10">
        <%= best_in_place_if @can_edit_self, @caster, :caster, :type => :checkbox %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Twitch</label>
      <div class="col-lg-10">
        <%= best_in_place_if @can_edit_self, @caster, :twitch, :type => :input %>
        <%if @can_edit_self%>
          (Just channel name. e.g. Amateurdota2league)
        <%end%>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">YouTube</label>
      <div class="col-lg-10">
        <%= best_in_place_if @can_edit_self, @caster, :youtube, :type => :input %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Twitter</label>
      <div class="col-lg-10">
        <%= best_in_place_if @can_edit_self, @caster, :twitter, :type => :input %>
      </div>
    </div>
  </fieldset>
</form>